<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/game_activity_id"
    tools:context=".GameActivity">

        <ImageView
            android:id="@+id/playerFish"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/playerFishValue"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/firstOtherFish"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/other_blue_fish" />

        <TextView
            android:id="@+id/firstOtherFishValue"
            android:layout_width="wrap_content"
            android:layout_height="55dp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/other_blue_fish"
            android:id="@+id/secondOtherFish"/>

        <TextView
            android:id="@+id/secondOtherFishValue"
            android:layout_width="wrap_content"
            android:layout_height="55dp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/other_blue_fish"
            android:id="@+id/thirdOtherFish"/>

        <TextView
            android:id="@+id/thirdOtherFishValue"
            android:layout_width="wrap_content"
            android:layout_height="55dp" />

        <ImageView
            android:id="@+id/fourthOtherFish"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/other_blue_fish" />

        <TextView
            android:id="@+id/fourthOtherFishValue"
            android:layout_width="wrap_content"
            android:layout_height="55dp" />

        <ImageView
            android:id="@+id/fifthOtherFish"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/other_blue_fish" />

        <TextView
            android:id="@+id/fifthOtherFishValue"
            android:layout_width="wrap_content"
            android:layout_height="55dp" />


</RelativeLayout>